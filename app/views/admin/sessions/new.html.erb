<h1>Admin Login</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  <div class="field">
    <%= form.label :email %><br>
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Login" %>
  </div>
<% end %>