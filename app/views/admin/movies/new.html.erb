<h1>New Movie</h1>

<%= form_with(model: [:admin, @movie], local: true) do |form| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
      <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :release_date %>
    <%= form.date_select :release_date %>
  </div>

  <!--<div class="field">-->
  <!--  <%= form.label :rating %>-->
  <!--  <%= form.number_field :rating %>-->
  <!--</div>-->

  <div class="field">
    <%= form.label :genre %>tag
    <%= form.collection_select :genre_id, @genres, :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  
  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, [['新着映画', 'new'], ['人気映画', 'popular']], include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>