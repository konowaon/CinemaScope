<h1>レビュー一覧</h1>

<% if @reviews.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>映画</th>
        <th>評価</th>
        <th>コメント</th>
        <th>アクション</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.user.username %></td>
          <td><%= review.movie.title %></td>
          <td><%= review.rating %></td>
          <td><%= review.content %></td>
          <td>
            <%= link_to '削除', admin_review_path(review), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>レビューがありません。</p>
<% end %>