<!-- app/views/search/results.html.erb -->
<div class="container mt-5">
  <h1 class="mb-4">Search Results</h1>

  <h2 class="mb-3">Users</h2>
  <% if @users.any? %>
    <ul class="list-group mb-4">
      <% @users.each do |user| %>
        <li class="list-group-item"><%= link_to user.username, public_user_path(user), class: 'text-decoration-none' %></li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No users found</p>
  <% end %>

  <h2 class="mb-3">Movies</h2>
  <% if @movies.any? %>
    <ul class="list-group mb-4">
      <% @movies.each do |movie| %>
        <li class="list-group-item"><%= link_to movie.title, movie_path(movie), class: 'text-decoration-none' %></li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No movies found</p>
  <% end %>

  <h2 class="mb-3">Genres</h2>
  <% if @genres.any? %>
    <ul class="list-group mb-4">
      <% @genres.each do |genre| %>
        <li class="list-group-item"><%= link_to genre.name, genre_path(genre), class: 'text-decoration-none' %></li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No genres found</p>
  <% end %>
</div>