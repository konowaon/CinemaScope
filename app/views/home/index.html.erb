<!-- app/views/home/index.html.erb -->


<div class="hero-section">
  <h1>Welcome to MovieReview</h1>
  <p>Your source for the latest movie reviews</p>
</div>

<section class="latest-reviews">
  <h2>Latest Reviews</h2>
  <% @latest_reviews.each do |review| %>
    <div class="review">
      <h3><%= review.movie.title %> by <%= review.user.email %></h3>
      <p><%= review.content %></p>
    </div>
  <% end %>
</section>

<div class="popular-movies">
  <h2>Popular Movies</h2>
  <ul>
    <% @popular_movies.each do |movie| %>
      <li>
        <h3><%= link_to movie.title, movie_path(movie) %></h3>
        <p>Rating: <%= movie.rating %></p>
      </li>
    <% end %>
  </ul>
</div>

<div class="categories">
  <h2>Categories</h2>
  <ul>
    <% @categories.each do |category| %>
      <li><%= link_to category.name, movies_path(genre: category.name) %></li>
    <% end %>
  </ul>
</div>
