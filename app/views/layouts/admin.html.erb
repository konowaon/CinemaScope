<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  
  <!-- Bootstrap CSSのリンクを追加 -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  
  <!-- 必要なら独自のCSSファイルも追加 -->
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <!-- ナビゲーションメニュー -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">管理者ログイン</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Movies', admin_movies_path, class: "nav-link" %>
        </li>
        <!-- <li class="nav-item">
          <%= link_to 'Reviews', admin_reviews_path, class: "nav-link" %>
        </li> -->
        <li class="nav-item">
          <%= link_to 'Users', admin_users_path, class: "nav-link" %>
        </li>
        <% if admin_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Logout', destroy_admin_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <!-- ページコンテンツ -->
  <div class="container mt-4">
    <%= yield %>
  </div>

  <!-- フッター -->
  <!--<footer class="footer mt-auto py-3 bg-light">-->
  <!--  <div class="container">-->
  <!--    <span class="text-muted">© Your Company 2024</span>-->
  <!--  </div>-->
  <!--</footer>-->

  <!-- Bootstrap JSと依存関係のあるJavaScriptファイルのリンクを追加 -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>