<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Movie Review Site</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Movies', movies_path %></li>
          <li><%= link_to 'Reviews', reviews_path %></li>
          <li><%= link_to 'About', about_path %></li>
          <%= link_to 'ゲストログイン', public_guest_sign_in_path, method: :post, class: 'btn btn-primary' %>
          <% if user_signed_in? %>
          <li><%= link_to 'My Page', public_user_path(current_user) %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Login', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <% end %>
        </ul>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>